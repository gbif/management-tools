$orangePeel := #ff6d00;
@import "./table.styl"
body {
  font-size: 14px;
  background: #f2f2f2;
}

.managementApp{
  flex-grow: 1;
  height: inherit;
  overflow: auto;
  position: relative;
}

.gb-nav, .gb-nav md-content, .gb-nav .md-toolbar-tools {
  background-color: #fafafa;
  overflow: hidden;
}

header-component {
  z-index: 200;
}

nav-component {
  z-index: 100;
}

.table-responsive-vertical {
  width: 100%;
}

.card-area {
  margin: 20px;
}

.md-headline {
  color: #666;
  margin: 10px 8px;
}

.white {
  background: white;
}

.gb-nav .menuItem {
  p {
    text-transform: uppercase;
    font-weight: 500;
  }
  &.isActive {
    color: $orangePeel;
  }
}

.text-red {
  color: tomato;
}
.badge-red {
  background: tomato;
  color: white;
  padding: 3px 5px;
  border-radius: 3px;
}